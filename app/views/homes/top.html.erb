      <%#= link_to game.title, user_games_path(params[:id]) %>
    <%# end %>
      <%= link_to ">>全て表示", user_games_path %>
   </table>
  <table class = 'game_genre_table'>
   <h3>ジャンル別で見る</h3>
    <%= link_to ">>全て表示", user_games_path %>
  </table>
  <div class = 'text_field center'>
    <h4>無料会員登録でさまざまな特典をゲット！！</h4>
  </div>
    <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-success' %>
    <%= link_to "ログイン", new_user_session_path, class: 'btn btn-primary' %>