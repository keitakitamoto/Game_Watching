<h1>Game-Watching</h1>
  <h3><%= link_to "ホーム",root_path %></h3>
  <h3><%= link_to "ログイン",user_session_path %></h3>
  <% if user_signed_in? %>
    <h3>User</h3>
      <%= link_to '[マイページ]', user_user_path(current_user) %>
      <%= link_to '[logout]', destroy_user_session_path, method: :delete %>
      <%= link_to '[掲示板機能]', user_topics_index_path %>
  <% end %>
  <% if admin_signed_in? %>
    <h3>Admin</h3>
      <%= link_to 'logout', destroy_admin_session_path, method: :delete %>
  <% end %>
  <div class = 'new_appre_table'>
   <h3>新着アプリ</h3>
    <div class = "new-appre">
    <% @games.each do |game| %>
     <p><%= attachment_image_tag game,:image %></p>
     <p><%= link_to game.title, user_game_path(game.id) %></p>
    <% end %>
    <%= link_to ">>全て表示", user_games_path %>
  </div>
  <table class = 'ranking_table'>
   <h3>ランキング表示</h3>
    <%# @all_ranks.each do |game| %>
