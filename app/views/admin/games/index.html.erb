<div class = "container">
 <h1>アプリゲーム一覧</h1>
  <div class ="new-game-edit">
   <%= link_to "新しいゲームを投稿する", new_admin_game_path , class: 'btn btn-primary' %>
   <%= link_to "登録ユーザー一覧", admin_users_path, class: 'btn btn-success' %>
   <%= link_to "ジャンル追加へ", admin_genres_path, class: 'btn btn-danger' %>
  </div>
    <div class="row">
      <% @games.each do |game| %>
      <div class = 'card col-md-4'>
       <div class="card-img-top">
        <%= attachment_image_tag game,:image, class: 'img-fluid' %>
       </div>
       <div class="card-body">
        <h5 class="card-title">
          <%= game.title %>
        </h5>
        <p class="card-text">
          <%= game.introduction %>
        </p>
         <%= link_to "編集する", edit_admin_game_path(game.id), class: 'btn btn-success' %>
       </div>
      </div>
     <% end %>
    </div>
 <%= paginate @games %>
</div>

