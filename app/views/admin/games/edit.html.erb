<h1>ゲーム編集</h1>
<%= form_with model:[:admin,@game], local:true do |f| %>
<div class = "game-photo_image">
  <%= f.label :'画像:' %>
  <%= f.attachment_field :image %>
</div>
<div class = "game-title-table">
  <%= f.label :'ゲームタイトル:' %>
  <%= f.text_field :title, placeholder: 'タイトル' %>
</div>
<div class = "genres-table">
  <%= f.label :'ジャンル:' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --"  %>
</div>
<div class = "PR-table">
  <%= f.label :'簡潔PR:' %>
  <%= f.text_area :introduction, placeholder: 'PR' %>
</div>
<div class = "PR-table">
  <%= f.label :'紹介文:' %>
  <%= f.text_area :body, placeholder: '紹介文' %>
</div>
<div class = "bonus-table">
  <%= f.label :'特典:' %>
  <%= f.text_area :introduction, placeholder: '特典' %>
</div>
<div class = "center">
  <%= f.submit :更新する, class: 'btn btn-success' %>
  <%= link_to "削除する", admin_game_path, method: :delete, class: 'btn btn-danger' %>
</div>
<% end %>
