<div class = "container">
  <h1>ジャンル編集</h1>
   <div class = "row">
    <div class = "genre_edit">
      <tr>
        <%= form_with model: [:admin, @genre], local: true do |f| %>
        <th><%= f.label :name,'カテゴリー名' %></th>
        <th><%= f.text_field :name, class: "form-control" %></th>
        <th><%= f.submit '更新する', class: "btn btn-success" %></th>
        <% end %>
        <th><%= button_to '削除する', admin_genre_path(@genre), method: :delete, class: "btn btn-danger" %></th>
      </tr>
    </div>
   </div>
</div>
