<div class="container">
  <div class="row">
   <h2>パスワードを忘れてしまった方</h2>
  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
        </div>
        <div class="actions">
          <%= f.submit "リセットパスワードを送る" %>
          <%= link_to "戻る", new_user_session_path, class: 'btn btn-danger' %>
        </div>
      <% end %>
  </div>
</div>
