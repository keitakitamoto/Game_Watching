<% @reviews.each do |review| %>
  <% if logged_in? %>
  <% if current_user.own?(review) %>
    <%= link_to user_review_path(review), method: :delete do %>
      <%= icon 'far', 'trash-alt' %>
    <%= link_to edit_review_path(review) do %>
      <%= icon 'far', 'edit' %>
   <% else %>
  <% if current_user&.like?(review) %>
    <%= link_to like_path(current_user.likes.find_by(review: review)),method: :delete, remote: true do %>
    <%= icon 'fa', 'heart' %>
   <% else %>
    <%= link_to user_likes_path(review: review), method: :post, remote: true do %>
    <%= icon 'far', 'heart' %>
  <% end %>
<% end %>