<h2>マイページ情報編集</h2>
  <div class = 'user_edit_page'>
    <%= form_with model: [:user,@user], local:true do |f| %>
     <div class = 'user_photo'>
      <%= f.label :'イメージ画像:' %>
      <%= f.attachment_field :image, size: 500 %>
     <div class = 'user_name'>
      <%= f.label :'ニックネーム:' %>
      <%= f.text_field :name, placefolder: '名前' %>
     </div>
     <div class = 'user_favorite_game_title'>
      <%= f.label :'お気に入りゲーム:' %>
      <%= f.text_field :title, placefolder: 'ゲームタイトル' %>
     </div>
     <div class = 'user_introduction'>
      <%= f.label :'自己紹介:' %>
      <%= f.text_area :introduction, placefolder: '自己紹介' %>
     </div>
     <div class = 'user_update'>
      <%= f.submit :更新する, class: 'btn btn-success' %>
     </div>
    <% end %>
  </div>