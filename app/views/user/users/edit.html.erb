<div class = "container">
 <div class = "row justify-content-center mb-3">
   <h2>マイページ情報編集</h2>
 </div>
   <div class = "row justify-content-center">
     <div class = 'user_edit_page'>
     <%= form_with model: [:user,@user], local:true do |f| %>
      <div class = 'user_photo mb-3'>
       <h4><%= f.label :'イメージ画像:' %></h4>
       <%= f.attachment_field :image, size: 500 %>
      </div>
      <div class = 'user_name mb-3'>
       <h4><%= f.label :'ニックネーム:' %></h4>
       <%= f.text_field :name, placefolder: '名前' %>
      </div>
      <div class = 'user_favorite_game_title mb-3'>
       <h4><%= f.label :'お気に入りゲーム:' %></h4>
       <%= f.text_field :title, placefolder: 'ゲームタイトル' %>
      </div>
      <div class = 'user_introduction mb-3'>
       <h4><%= f.label :'自己紹介:' %></h4>
       <%= f.text_area :introduction, placefolder: '自己紹介', size:"60x10" %>
      </div>
      <div class = 'row mb-3'>
       <%= f.submit :更新する, class: 'btn btn-success' %>
      </div>
     <% end %>
    </div>
   </div>
 </div>
