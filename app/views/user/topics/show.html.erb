<div class = "container">
 <h1><%= @topic.title %></h1>
  <div class = "row">
   <% @posts.each_with_index do |post, idx| %>
  <p><h4><%= idx + 1 %>. <%= current_user.name %></h4></p>
   <div class="balloon1-left">
    <p><%= post.body %></p>
   </div>
   <% end %>
  </div>
  <div class = "row">
   <div class = "new-topic justify-content-center">
    <h3>新規書き込み</h3>
    <p>こちらに入力してそのまま投稿！</p>
   </div>
  </div>
 <div class = "row">
   <div class = "topic-postform">
     <%= form_for @newpost, :url => user_post_create_path do |f| %>
      <p><h4>名前:<%= current_user.name %></h4></p>
      <p><h4>本文:</h4>
       <p><%= f.text_area :body, size:"60x10" %></p>
          <%= f.hidden_field :topic_id %>
          <%= f.submit :レビューする %>
     <% end %>
   </div>
 </div>
</div>
