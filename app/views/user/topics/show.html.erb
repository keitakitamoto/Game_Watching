<div class = "container">
 <h1><%= @topic.title %></h1>
  <div class = "row">
   <% @posts.each_with_index do |post, idx| %>
  <p>
    <%= idx + 1 %>. <%= post.name %> : <%= post.body %>
  </p>
   <% end %>
  </div>
<h3>新規書き込み</h3>
<p>こちらに入力してそのまま投稿！</p>
 <div class = "row">
  <%= form_for @newpost, :url => user_post_create_path do |f| %>
    <p>名前</p>
    <p><%= current_user.name %></p>
    <p>本文</p>
    <p><%= f.text_area :body %></p>
    <%= f.hidden_field :topic_id %>
    <%= f.submit :レビューする %>
  <% end %>
 </div>
</div>