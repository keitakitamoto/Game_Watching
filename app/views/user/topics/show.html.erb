<div class = "container">
 <div class="row">
  <h1><%= @topic.title %></h1>
 </div>
  <div class = "row">
   <% @posts.each_with_index do |post, idx| %>
   <div class="id-user-name col-md-6">
    <p><h5><%= idx + 1 %>. <%= post.name %></h5></p>
   </div>
   <div class="balloon1-left col-md-6">
    <p><%= post.body %></p>
   </div>
    <% end %>
    <div class="row justify-content-center col-12">
     <%= paginate(@posts) %>
    </div>
  </div>
  <div class = "row col-12">
   <div class = "new-topic col-md-8">
    <h3>新規書き込み</h3>
    <p>こちらに入力してそのまま投稿！</p>
   </div>
  </div>
 <div class = "row col-12">
   <div class = "topic-postform col-md-8">
     <%= form_for @newpost, :url => user_post_create_path do |f| %>
      <p><h4>名前:</h4></p>
       <%= f.text_field :name %></p>
      <p><h4>本文:</h4></p>
       <%= f.text_area :body, size:"60x10" %>
       <%= f.hidden_field :topic_id %>
       <%= f.submit :レビューする %>
     <% end %>
   </div>
 </div>
</div>
