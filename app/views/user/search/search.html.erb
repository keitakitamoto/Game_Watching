<div class="container">
  <div class="row">
      <% if @datas.empty? %>
        <h2>該当するゲームはありません</h2>
      <% end %>
        <div class ="text-center">
          <h2>検索結果表示</h2>
        </div>
        <div class="row col-12">
          <% @datas.each do |data| %>
            <div class="col-md-6">
              <div class="image">
                <%= link_to user_game_path(data.id) do %>
                  <%= attachment_image_tag data, :image, size:"200x200" %><br>
                <% end %>
              </div>
              <div class ="title">
                <h4><%=  data.title %></h4>
              </div>
              <div class="introduction">
                <p><%= data.introduction %></p>
              </div>
            </div>
          <% end %>
        </div>
  </div>
</div>
