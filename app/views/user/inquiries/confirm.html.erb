<div class ="container">
  <div class ="row">
    <h1>お問い合わせ内容の確認</h1>
  </div>
    <div class="row">
      <table class="table">
        <tbody>
          <tr>
            <th>名前<span class="text-danger">（必須）</span></th>
            <td><%= @inquiry.name %></td>
          </tr>
          <tr>
            <th>メールアドレス<span class="text-danger">（必須）</span></th>
            <td><%= @inquiry.email %></td>
            </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td style="white-space: pre-wrap;"><%= @inquiry.message %></td>
          </tr>
        </tbody>
      </table>
     </div>
      <div class="row">
        <%= form_for @inquiry, url: user_inquiries_thanks_path, method: :post do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :message %>
          <div><%= f.submit '送信', class: 'btn btn-primary' %></div>
        <% end %>
      </div>
</div>
