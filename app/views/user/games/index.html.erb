<div class = "container">
 <div class = "row">
   <div class = 'game-index'>
    <h1>ゲームアプリ一覧</h1>
     <tr>
      <% @games.each do |game| %>
       <th><%= attachment_image_tag game,:image,size:'100x100' %></th>
       <td><%= game.title %></td>
       <td><%= game.introduction %></td>
       <td><%= link_to "開く", user_game_path(game.id), class: 'btn btn-success' %></td>
      <% end %>
     </tr>
   </div>
 </div>
</div>
<%= paginate @games %>
