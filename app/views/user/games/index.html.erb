<div class = "container">
 <div class = "row">
  <h1>ゲームアプリ一覧</h1>
 </div>
 <div class ="row">
   <% @games.each do |game| %>
   <div class = 'card col-md-4'>
    <div class="card-img-top">
      <%= attachment_image_tag game,:image, class: 'img-fluid' %>
    </div>
    <div class="card-body">
     <h5 class="card-title">
       <%= game.title %>
     </h5>
     <p class="card-text">
       <%= game.introduction %>
     </p>
      <%= link_to "開く", user_game_path(game.id), class: 'btn btn-success' %>
    </div>
   </div>
   <% end %>
    <%= paginate @games %>
 </div>
</div>